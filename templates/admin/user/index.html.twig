{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Invités</h1>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.email }}</td>
                <td>{% for role in user.roles %} {{ role }} {% endfor %}</td>
                <td>
                    <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% set totalPages = (total / 25)|round(0, 'ceil') %}

    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pageUser > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {pageUser: 1}) }}">Première page</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {pageUser: pageUser - 1}) }}">Précédent</a>
                </li>
            {% endif %}

            {% for i in range(max(1, pageUser - 3), min(totalPages, pageUser + 3)) %}
                <li class="page-item {% if i == pageUser %}active{% endif %}">
                    <a class="page-link" href="{{ path('admin_user_index', {pageUser: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}

            {% if pageUser < totalPages %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {pageUser: pageUser + 1}) }}">Suivant</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {pageUser: totalPages}) }}">Dernière page</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}