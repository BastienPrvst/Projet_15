{% extends 'admin.html.twig' %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Invités</h1>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Roles</th>
            <th>État</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ "ROLE_ADMIN" in user.roles ? "Administrateur" : "Invité" }}</td>
                <td>{{ user.blocked == true ? "Bloqué" : "Actif"}}</td>
                <td>
                    <a href="{{ path('admin_user_modify', {id: user.id, userPage: app.request.query.get('userPage', 1)}) }}" class="btn btn-warning my-3">Modifier</a>
                    <a href="{{ path('admin_user_delete', {id: user.id, userPage: app.request.query.get('userPage', 1)}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% set totalPages = (total / 25)|round(0, 'ceil') %}

    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if userPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {userPage: 1}) }}">Première page</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {userPage: userPage - 1}) }}">Précédent</a>
                </li>
            {% endif %}

            {% for i in range(max(1, userPage - 3), min(totalPages, userPage + 3)) %}
                <li class="page-item {% if i == userPage %}active{% endif %}">
                    <a class="page-link" href="{{ path('admin_user_index', {userPage: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}

            {% if userPage < totalPages %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {userPage: userPage + 1}) }}">Suivant</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ path('admin_user_index', {userPage: totalPages}) }}">Dernière page</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}